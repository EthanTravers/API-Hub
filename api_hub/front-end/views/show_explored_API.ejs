<div class="container-fluid" style="max-width: 400px; margin: 20px auto; text-align: center;">
    <h1 style="font-size: 3em; color: #000000;">{{user['currentapiname']}} Functions</h1>
    <div v-for="func in user.currentapifunctions">
        <details>
            <summary>
                <p style="font-size: 1.2em; color: #08daba; margin-bottom: 10px; font-weight: bold">{{func['function_name']}}</p>
            </summary>
            <p style="font-weight: bold">Route</p> <p>{{func['route']}}</p>
            <p style="font-weight: bold">Authentication Level</p> <p>{{func['auth_level']}}</p>
            <p style="font-weight: bold">HTTP Methods</p> <p>{{func['methods']}}</p>
            <p style="font-weight: bold">Returns</p>
            <div v-for="r in func.returns">
                <p>{{r}}</p>
            </div>
        </details>

    </div>
    <button @click="resetAPI()" type="button" style="background-color: #2ecc71; color: white; padding: 10px; border: none; border-radius: 4px; cursor: pointer; font-size: 1.2em;">Explore New API</button>
</div>
