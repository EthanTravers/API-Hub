<div  class="login-card">
  <form>
    <div class="form-group">
      <label for="login-username" style="font-weight: bold;">Username</label>
      <input type="text" autocomplete="on" v-model="username" id="login-username"/>
    </div>
    <div class="form-group">
      <label for="login-password" style="font-weight: bold;">Password</label>
      <input type="password" autocomplete="on" v-model="password" id="login-password"/>
    </div>
    <div class="button-group">
      <button @click="register(username, password)" type="submit">Register</button>
      <button @click="login(username, password)" type="submit">Login</button>
    </div>
  </form>
</div>

